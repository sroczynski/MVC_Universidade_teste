@model MvcApplication1.Models.AlunoDB

@{
    ViewBag.Title = "Create";
}
<div class="col-md-4">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">Disciplina</h2>
        </div>
        <div class="acoes panel body">

            @using (Html.BeginForm("Create", "aluno", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend>Criar</legend>

                    @Html.HiddenFor(model => model.cursoID)
                    @Html.HiddenFor(model => model.universidadeID)

                    <div class="editor-label">
                        @Html.LabelFor(model => model.alunoNome, "Nome")
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.alunoNome , new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.alunoNome)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.alunoEmail, "Email")
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.alunoEmail, new { @class = "form-control", type = "email" })
                        @Html.ValidationMessageFor(model => model.alunoEmail)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.dataNascimento, "Data de Nascimento")
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.dataNascimento, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.dataNascimento)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.universidadeID, "Universidade")
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("universidade", null, new { @class = "form-control" })
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.cursoID, "Curso")
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("curso", null, new { @class = "form-control" })
                    </div>

                    <br />

                    <p>
                        <input class="btn btn-primary" type="submit" value="Criar" />
                        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
                    </p>
                </fieldset>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}