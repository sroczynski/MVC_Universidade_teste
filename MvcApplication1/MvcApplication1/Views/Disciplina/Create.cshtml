@model MvcApplication1.Models.DisciplinaDB

@{
    ViewBag.Title = "Create";
}

<h2>Criar</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title">Disciplina</h2>
    </div>
    <div class="acoes panel body">

        @using (Html.BeginForm("Create", "disciplina", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.cursoID)
            @Html.HiddenFor(model => model.universidadeID)

            <fieldset>
                <legend>Disciplina DB</legend>

                <div class="editor-label">
                    @Html.LabelFor(model => model.nomeDisciplina)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.nomeDisciplina)
                    @Html.ValidationMessageFor(model => model.nomeDisciplina)
                </div>

                <div class="editor-label">
                    <b>Universidade</b>
                </div>
                <div class="editor-field">
                    @Html.DropDownList("universidade")
                </div>

                <div class="editor-label">
                    <b>curso</b>
                </div>

                <div class="editor-field">
                    @Html.DropDownList("curso")
                </div>

                <br />

                <p>
                    <input class="btn btn-success" type="submit" value="Criar" />
                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
                </p>
            </fieldset>
        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
