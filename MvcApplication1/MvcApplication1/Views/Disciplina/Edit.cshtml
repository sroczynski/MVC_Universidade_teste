@model MvcApplication1.Models.DisciplinaDB

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>
<div class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title">Disciplina</h2>
    </div>
    <div class="acoes panel body">
        @using (Html.BeginForm("Edit", "disciplina", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Disciplina</legend>

                @Html.HiddenFor(model => model.disciplinaID)
                @Html.HiddenFor(model => model.cursoID)
                @Html.HiddenFor(model => model.universidadeID)

                <div class="editor-label">
                    @Html.LabelFor(model => model.nomeDisciplina)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.nomeDisciplina)
                    @Html.ValidationMessageFor(model => model.nomeDisciplina)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.nomeUniversidade)
                </div>
                <div class="editor-field">
                    @Html.DropDownList("universidade")
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.nomeCurso)
                </div>
                <div class="editor-field">
                    @Html.DropDownList("curso")
                </div>

                <br />

                <p>
                    <input class="btn btn-success" type="submit" value="Save" />
                    |
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
                </p>
            </fieldset>
    
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
